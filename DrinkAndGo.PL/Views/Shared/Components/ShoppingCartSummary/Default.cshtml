@model ShoppingCartViewModel

@using DrinkAndGo.PL.ViewModels


@if (Model.ShoppingCart.ShoppingCartItems.Count > 0 )
{
    <li>
        <a asp-controller="ShoppingCart" asp-action="Index" class="mx-3">
            <span class="cart-icon"><i class="fa-solid fa-cart-shopping fs-3"></i></span>
            <span id="cart-status" class="cart-count">
                 @Model.ShoppingCart.ShoppingCartItems.Count
            </span>
        </a>
    </li>
}
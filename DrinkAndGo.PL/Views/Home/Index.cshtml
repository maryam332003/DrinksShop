@using DrinkAndGo.PL.ViewModels
@model HomeViewModel
@{
    ViewData["Title"] = "Home Page";
}
<div class="container">
    @await Html.PartialAsync("Carousel")

    <h2 class="my-4" >Preferred drinks of the week <span style="color: #157347;">Just for you!</span> </h2>

    <div class="row">
        @foreach (var drink in Model.PreferredDrinks)
        {
            @Html.Partial("DrinkSummary", drink)
        }
    </div>
</div>